import serial
import time


class driveHandler:
    
    
    def __init__(self):
        global ser
        ser = serial.Serial('/dev/ttyAMA0',9600)
        ##ser = serial.Serial('/dev/tty.usbmodem411',9600)
        time.sleep(2)

    def drive(self, direction):
        if (direction == "stop"):
            ser.write("stp")
        elif (direction == "fwd"):
            ser.write("fwd")
        elif (direction == "right"):
            ser.write("rgt")
        elif (direction == "left"):
            ser.write("lft")
        elif (direction == "bwd"):
            ser.write("bwd")
        
    def setVelocity(self, velo):
        if (velo < 256):
            ser.write("vel"+str(velo))
        else: 
            ser.write("vel255");
    
    def __del__(self):
        ser.close()

    