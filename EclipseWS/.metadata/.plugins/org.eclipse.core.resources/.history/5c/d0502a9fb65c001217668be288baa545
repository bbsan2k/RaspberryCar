##import Drivehandler
##import threading
from SimpleXMLRPCServer import SimpleXMLRPCServer as Server

def drive(direction):
    print(direction)
    

        
        
        
if __name__ == "__main__":
    rpcSrv = Server(("",8085))
    rpcSrv.register_function(drive)
    print("RPC up and running")
    rpcSrv.serve_forever()